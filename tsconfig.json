{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
